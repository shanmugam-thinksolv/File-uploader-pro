# Google OAuth Credentials
# Create credentials at https://console.cloud.google.com/
# APIs to enable: Google Drive API, Google People API, Google Picker API
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Google Picker API Key (Required for folder selection)
# Create API key at: https://console.cloud.google.com/ → APIs & Services → Credentials
NEXT_PUBLIC_GOOGLE_API_KEY=your_google_api_key_here

# NextAuth Configuration
# URL of the application (e.g., http://localhost:3000 for local development)
NEXTAUTH_URL=http://localhost:3000
# Generate a secret with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=your_nextauth_secret_here

# Database Configuration - Supabase PostgreSQL
# Get these from your Supabase project settings > Database > Connection String
# Use "Transaction" mode for DATABASE_URL and "Session" mode for DIRECT_URL
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Supabase API Keys (Optional - only needed if using Supabase Storage, Auth, or Realtime)
# Get these from your Supabase project settings > API > Project API keys
# IMPORTANT: NEVER expose service_role key in client-side code!
NEXT_PUBLIC_SUPABASE_URL="https://[PROJECT-REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key_here"
# SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"  # Uncomment if needed for server-side operations
