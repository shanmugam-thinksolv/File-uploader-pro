generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Form {
  id          String   @id @default(uuid())
  title       String   @default("Untitled Form")
  description String?
  
  // Design Config
  logoUrl         String?
  primaryColor    String   @default("#000000")
  secondaryColor  String   @default("#ffffff")
  backgroundColor String   @default("#f3f4f6")
  fontFamily      String   @default("Inter")
  buttonTextColor String   @default("#ffffff")
  cardStyle       String   @default("shadow") // "shadow", "flat", "border"
  borderRadius    String   @default("md")     // "none", "sm", "md", "lg", "full"
  coverImageUrl   String?
  
  // Upload Config
  allowedTypes        String   @default("") // Comma-separated
  maxSizeMB           Int      @default(5)
  driveEnabled        Boolean  @default(false)
  driveFolderId       String?
  driveFolderName     String?
  driveFolderUrl      String?
  isPasswordProtected Boolean  @default(false)
  password            String?
  isCaptchaEnabled    Boolean  @default(false)
  enableSubmitAnother Boolean  @default(true)
  
  // Access Control & Expiry
  isPublished         Boolean  @default(false)
  isAcceptingResponses Boolean @default(true)
  expiryDate          DateTime?
  accessLevel         String   @default("ANYONE") // "ANYONE", "INVITED"
  allowedEmails       String   @default("") // Comma-separated
  emailFieldControl   String   @default("OPTIONAL") // "REQUIRED", "OPTIONAL", "NOT_INCLUDED"
  
  // Metadata & Organization
  enableMetadataSpreadsheet Boolean @default(false)
  subfolderOrganization     String  @default("NONE") // "NONE", "DATE", "SUBMITTER", "CUSTOM"
  customSubfolderField      String?
  enableSmartGrouping       Boolean @default(false)
  
  // New Features
  uploadFields              Json?   // Array of {id, label, allowedTypes, maxSize}
  customQuestions           Json?   // Array of {id, type, label, required, options}
  
  submissions     Submission[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Submission {
  id          String   @id @default(uuid())
  formId      String
  form        Form     @relation(fields: [formId], references: [id], onDelete: Cascade)
  
  // File Info
  fileUrl     String
  fileName    String
  fileType    String
  fileSize    Int
  
  // Submitter Info
  submitterName  String?
  submitterEmail String?
  
  // Additional Metadata
  metadata    Json?
  answers     Json?   // For custom questions
  files       Json?   // Array of {url, name, type, size, fieldId, label}
  
  createdAt   DateTime @default(now())
}

// NextAuth Models
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  forms         Form[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
